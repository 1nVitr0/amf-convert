{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/test/*", "dist", "build"],
}
